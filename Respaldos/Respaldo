   function eleccion (jugada){
        let resultado = ""
        if(jugada == 1) {
        resultado = "Hipodoge"
    } else if(jugada == 2) {
        resultado = "Capipepo"
    }else {
        resultado = "Ratigueya"
    }
    return resultado
}
let spanMascotaEnemigo = document.getElementById ("mascota-enemigo")
let enemigo = aleatorio (1,3)
alert ("El enemigo seleccion√≥ a " +eleccion(enemigo))
spanMascotaEnemigo.innerHTML = eleccion(enemigo)

