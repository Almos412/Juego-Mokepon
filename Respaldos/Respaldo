function pintarPersonaje(){
    lienzo.clearRect (0, 0, mapa.width, mapa.height)
    lienzo.drawImage(
        Capipepo.mapaFoto, 
        Capipepo.x, 
        Capipepo.y, 
        Capipepo.ancho, 
        Capipepo.alto
        )
}

function moverCapipepo (){
    Capipepo.x = Capipepo.x + 5
    pintarPersonaje ()
}

